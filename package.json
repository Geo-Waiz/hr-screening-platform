{
  "name": "hr-screening-platform",
  "version": "1.0.0",
  "private": true,
  "description": "AI-powered HR screening platform",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "build": "npm run build:api && npm run build:frontend",
    "build:api": "cd apps/api && npm run build",
    "build:frontend": "cd apps/frontend && npm run build",
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:frontend\"",
    "dev:api": "cd apps/api && npm run dev",
    "dev:frontend": "cd apps/frontend && npm run dev",
    "start": "concurrently \"npm run start:api\" \"npm run start:frontend\"",
    "start:api": "cd apps/api && npm run start",
    "start:frontend": "cd apps/frontend && npm run preview"
  },
  "dependencies": {
    "@emotion/react": "latest",
