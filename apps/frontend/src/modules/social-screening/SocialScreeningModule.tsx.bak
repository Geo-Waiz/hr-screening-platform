      candidateId: '2',
      candidateName: 'Marcus Johnson',
      status: 'in-progress',
      startDate: new Date('2024-09-21'),
      overallRiskScore: 0,
      socialProfiles: [
        {
          platform: 'LinkedIn',
          url: 'linkedin.com/in/marcusjohnson',
