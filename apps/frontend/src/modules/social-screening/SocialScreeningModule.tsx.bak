                      <button
                        onClick={(e) => {
                          e.stopPropagation()
                          handleManualReview(screening.id, 'reject', 'Rejected after review')
                        }}
                        style={{
                          background: '#fef2f2',
                          color: '#dc2626',
                          border: 'none',
                          borderRadius: '6px',
                          padding: '6px 12px',
                          cursor: 'pointer',
                          fontSize: '12px',
                          fontWeight: '500'
                        }}
