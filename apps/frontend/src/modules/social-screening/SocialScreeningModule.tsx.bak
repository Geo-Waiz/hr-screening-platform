        {[
          { label: 'Total Screenings', value: screenings.length.toString(), icon: 'üîç', color: '#3b82f6' },
          { label: 'Completed', value: screenings.filter(s => s.status === 'completed').length.toString(), icon: '‚úÖ', color: '#10b981' },
          { label: 'In Progress', value: screenings.filter(s => s.status === 'in-progress').length.toString(), icon: '‚è≥', color: '#f59e0b' },
          { label: 'Flagged', value: screenings.filter(s => s.status === 'flagged').length.toString(), icon: 'üö©', color: '#ef4444' }
